pipeline {
    agent any

    environment {
        IMAGE_NAME     = 'philiprime97/aws-web'   // My Docker Hub repo
        IMAGE_TAG      = '${env.BUILD_NUMBER}'                     // Image tag version
        CREDENTIALS_ID_1 = 'dockerhub'              // Jenkins - Docker Hub credentials ID
        CREDENTIALS_ID_2 = 'github-creds'           // Jenkins - GitHub credentials ID
        HTML_TEMPLATE  = 'https://raw.githubusercontent.com/Philiprime97/DevOps_Project/main/html.tpl' // HTML Report - custom template
    }

    stages {

        stage('Check & Install Docker') {
            steps {
                sh '''
                if ! docker --version >/dev/null 2>&1; then
                    echo "Docker is not installed. Installing Docker..."
        
                    # Update packages and install prerequisites
                    sudo apt-get update -y
                    sudo apt-get install -y apt-transport-https ca-certificates curl software-properties-common gnupg lsb-release
        
                    # Add Docker GPG key and repository
                    curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo gpg --dearmor -o /usr/share/keyrings/docker-archive-keyring.gpg
                    echo "deb [arch=$(dpkg --print-architecture) signed-by=/usr/share/keyrings/docker-archive-keyring.gpg] https://download.docker.com/linux/ubuntu $(lsb_release -cs) stable" | sudo tee /etc/apt/sources.list.d/docker.list > /dev/null
        
                    # Install Docker
                    sudo apt-get update -y
                    sudo apt-get install -y docker-ce docker-ce-cli containerd.io
        
                    # Start and enable Docker service
                    sudo systemctl enable docker
                    sudo systemctl start docker
        
                    echo "Docker installed successfully!"
                else
                    echo "Docker is already installed."
                fi
        
                docker --version
                '''
            }
        }

        stage('Check & Install Trivy') {
            steps {
                sh '''
                # Check if Trivy exists
                if ! trivy --version >/dev/null 2>&1; then
                    echo "Trivy is not installed. Installing Trivy..."
        
                    # Download Trivy release and make it executable
                    curl -sfL https://raw.githubusercontent.com/aquasecurity/trivy/main/contrib/install.sh | sudo sh
        
                    echo "Trivy installed successfully!"
                else
                    echo "Trivy is already installed."
                fi
        
                # Verify installation
                trivy --version
                '''
            }
        }


        stage('Git Clone') {
            steps {
                checkout scm
            }
        }

        stage('Lint & Security Scan') {
            parallel {

                stage('Linting') {
                    steps {
                        echo 'Running Python lint and Dockerfile checks...'
                        sh '''
                        flake8 . > flake8-report.txt || true
                        if [ -f Dockerfile ]; then
                            docker run --rm -i hadolint/hadolint < Dockerfile >> flake8-report.txt 2>&1 || echo "Dockerfile issues" >> flake8-report.txt
                        fi
                        '''
                        archiveArtifacts artifacts: 'flake8-report.txt', fingerprint: true
                    }
                }

                stage('Scan Source Code') {
                    steps {
                        echo 'Scanning source code with Trivy and generating HTML...'
                        sh '''
                        wget -q -O html.tpl ${HTML_TEMPLATE}
                        trivy fs . --severity UNKNOWN,LOW,MEDIUM,HIGH,CRITICAL \
                            --format template --template "@html.tpl" \
                            -o trivy-source-report.html || true
                        cat trivy-source-report.html
                        '''
                        archiveArtifacts artifacts: 'trivy-source-report.html', fingerprint: true
                    }
                }

            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh """
                    cd Application && \
                    docker build -t ${IMAGE_NAME}:${IMAGE_TAG} .
                    """
                }
            }
        }

        stage('Image Scan') {
            steps {
                echo 'Scanning Docker image with Trivy...'
                sh '''
                wget -q -O html.tpl ${HTML_TEMPLATE}
                trivy image --severity UNKNOWN,LOW,MEDIUM,HIGH,CRITICAL \
                    --format template --template "@html.tpl" \
                    -o trivy-image-report.html ${IMAGE_NAME}:${IMAGE_TAG} || true
                cat trivy-image-report.html
                '''
                archiveArtifacts artifacts: 'trivy-image-report.html', fingerprint: true
            }
        }

        stage('Login to Docker Hub') {
            steps {
                withCredentials([usernamePassword(credentialsId: "${CREDENTIALS_ID_1}", usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    sh '''
                    echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin
                    '''
                }
            }
        }

        stage('Push Image to Docker Hub') {
            steps {
                script {
                    sh """
                    docker push ${IMAGE_NAME}:${IMAGE_TAG}
                    """
                }
            }
        }

        stage('Push Helm to ArgoCD Branch') {
            steps {
                withCredentials([usernamePassword(credentialsId: "${CREDENTIALS_ID_2}", usernameVariable: 'GIT_USER', passwordVariable: 'GIT_PASS')]) {
                    sh '''
                    echo "üîÅ Updating Helm chart in argocd branch..."
        
                    # Configure Git
                    git config --global user.name "Jenkins CI"
                    git config --global user.email "jenkins@ci.local"
        
                    # Fetch all branches
                    git fetch origin main:main
        
                    # Checkout argocd branch (create if doesn't exist)
                    git checkout -B argocd origin/argocd || git checkout -b argocd
        
                    # Copy the Helm folder from main branch
                    git checkout main -- helm/
        
                    # Update values.yaml with new image and tag
                    sed -i "s|^  imagename:.*|  imagename: ${IMAGE_NAME}|" helm/values.yaml
                    sed -i "s|^  imagetag:.*|  imagetag: ${IMAGE_TAG}|" helm/values.yaml
        
                    # Commit and push
                    git add helm/
                    git commit -m "Update Helm chart with ${IMAGE_NAME}:${IMAGE_TAG}" || echo "No changes to commit"
                    git push https://${GIT_USER}:${GIT_PASS}@github.com/Philiprime97/DevOps_Project.git argocd --force
        
                    echo "‚úÖ Helm chart pushed to argocd branch!"
                    '''
                }
            }
        }
    }

    post {
        always {
            echo "Cleaning up local images..."
            sh 'docker rmi ${IMAGE_NAME}:${IMAGE_TAG} || true'
            sh 'docker system prune -f'
        }
        success {
            echo "‚úÖ Successfully scanned and pushed ${IMAGE_NAME}:${IMAGE_TAG} to Docker Hub"
        }
        failure {
            echo "‚ùå Build failed. Check logs and Trivy reports."
        }
    }
}
